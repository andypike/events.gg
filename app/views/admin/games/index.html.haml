- content_for :title do 
  Games

#games
  .row
    .large-12.columns

      %h1= pluralize(@games.count, "Game")

      = link_to "Add a new game", new_admin_game_path, class: "button"

      %table
        %thead
          %tr
            %th Name
            %th Status
            %th Followers
            %th
        %tbody
          - @games.each do |game|
            %tr
              %td= game.name
              %td= game.status.titleize
              %td= game.number_of_followers
              %td= link_to "Edit", edit_admin_game_path(game)
