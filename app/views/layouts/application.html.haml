!!! 5
/[if lt IE 7 ] <html class="ie6" lang="en">
/[if IE 7 ]    <html class="ie7" lang="en">
/[if IE 8 ]    <html class="ie8" lang="en">
= surround '<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"><!--<![endif]-->'.html_safe, '</html>'.html_safe do
  
  %head
    %meta{charset: "utf-8"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}

    %title= content_for?(:title) ? "#{yield(:title)} - Esports Events" : "Esports Events"

    = stylesheet_link_tag "application"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Roboto:100,300,400,700"

    = javascript_include_tag "vendor/custom.modernizr"
    = analytics_init if Rails.env.production?
    = csrf_meta_tags

  %body{ class: controller_name }
    = render 'menu'
    = render 'flash'

    = yield
  
    = render 'footer'

    = javascript_include_tag "application"